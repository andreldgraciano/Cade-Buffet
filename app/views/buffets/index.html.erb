<% if @buffets.any? %>
  <% @buffets.each do |buffet|%>
    <h2><%= Buffet.human_attribute_name(:brand_name) %>: <%= buffet.brand_name %></h2>
    <ul>
      <li><%= Buffet.human_attribute_name(:registration_number) %>: <%= buffet.registration_number %></li>
      <li><%= Buffet.human_attribute_name(:phone) %>: <%= buffet.phone %></li>
      <li><%= Buffet.human_attribute_name(:email) %>: <%= buffet.email %></li>
      <li><%= Buffet.human_attribute_name(:address) %>: <%= buffet.address %></li>
      <li><%= Buffet.human_attribute_name(:district) %>: <%= buffet.district %></li>
      <li><%= Buffet.human_attribute_name(:state) %>: <%= buffet.state %></li>
      <li><%= Buffet.human_attribute_name(:city) %>: <%= buffet.city %></li>
      <li><%= Buffet.human_attribute_name(:zip_code) %>: <%= buffet.zip_code %></li>
      <li><%= Buffet.human_attribute_name(:description) %>: <%= buffet.description %></li>
      <li><%= Buffet.human_attribute_name(:payment_id) %>: <%= buffet.payment.payment_type %></li>
      <li><%= Buffet.human_attribute_name(:buffet_profile_id) %>: <%= buffet.buffet_profile.email %></li>
    </ul>
  <% end %>
